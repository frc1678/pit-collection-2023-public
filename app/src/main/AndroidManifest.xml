<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.frc1678.pit_collection">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:fullBackupContent="@null"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.frc1678.pit_collection.TeamListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.frc1678.pit_collection.ModeCollectionSelectActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.frc1678.pit_collection.CollectionObjectiveDataActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.frc1678.pit_collection.CollectionSubjectiveActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.frc1678.pit_collection.CameraActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.frc1678.pit_collection.CameraConfirmationActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.frc1678.pit_collection.CollectionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.frc1678.pit_collection.CollectionObjectiveActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>
