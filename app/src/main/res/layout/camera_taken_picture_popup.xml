<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_type_preview"
            style="@style/tv_picture_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/very_small"
            android:layout_marginRight="@dimen/very_small"
            android:layout_marginBottom="@dimen/very_small"
            android:layout_weight="1"
            android:background="@color/cancel_red"
            android:scaleType="fitCenter"
            android:src="@drawable/close_button" />

    </LinearLayout>

    <ImageView
    android:id="@+id/picture_preview"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    android:layout_gravity="center"/>

</LinearLayout>
